---
layout: default

--- html
<div class="page">

  <h2><%= title %></h2>

  <%= content %>

  <small>Written by <%= author %>, <%= date %></small>

  <ul class="posts">
    <% p = previous_post %><% if p %>
    <li><span>Previous: <%= p.date %></span> &raquo; <a href="<%= p.url %>"><%= p.title %></a></li>
    <% end %>
    <% p = next_post %><% if p %>
    <li><span> Next: <%= p.date %></span> &raquo; <a href="<%= p.url %>"><%= p.title %></a></li>
    <% end %>
  </ul>

</div>

